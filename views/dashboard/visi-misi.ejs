<%- include('layouts/header') %>

    <h2 class="mt-3">Daftar Visi Misi</h2>
    <div class="table-responsive">
        <table class="table table-bordered align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Detail</th>
                    <th scope="col">Ubah</th>
                </tr>
            </thead>
            <tbody>
                <% for(let row of rows){ %>
                    <tr>
                        <td>
                            <% let no = rows.indexOf(row) %>
                            <%= no+1 %>
                        </td>
                        <td class="text-start">
                            <%= row.nama_visimisi %>
                        </td>
                        <td class="text-start">
                            <%- row.detail_visimisi %>
                        </td>
                        <td>
                            <a class="nav-link" href="/dashboard/editvisimisi/<%= row.id_visimisi %>">
                                <span data-feather="edit"></span>
                            </a>
                        </td>
                    </tr>
            </tbody>
            <% } %>
        </table>
    </div>


    <%- include('layouts/footer') %>
<%- include('layouts/header-edit') %>

    <h2 class="mt-3">Daftar Sambutan</h2>
    <div class="table-responsive">
        <table class="table table-bordered align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Detail</th>
                    <th scope="col">Foto</th>
                    <th scope="col">Ubah</th>
                    <th scope="col">Hapus</th>
                </tr>
            </thead>
            <tbody>
                <% for(row of rows){ %>
                    <tr>
                        <td>
                            <% let no = rows.indexOf(row) %>
                            <%= no+1 %>
                        </td>
                        <td class="text-start">
                            <%= row.nama_sambutan %>
                        </td>
                        <td class="text-start">
                            <%- row.detail_sambutan %>
                        </td>
                        <td>
                            <img src="/assets/images/sambutan/<%= row.foto_sambutan %>" alt="Foto Sambutan"
                                width="300px">
                        </td>
                        <td>
                            <a class="nav-link" href="/dashboard/editsambutan/<%= row.id_sambutan %>">
                                <span data-feather="edit"></span>
                            </a>
                        </td>
                        <td>
                            <a class="nav-link" href="/dashboard/deletesambutan/<%= row.id_sambutan %>"
                                onclick="return confirm('Yakin?')">
                                <span data-feather="trash"></span>
                            </a>
                        </td>
                    </tr>
            </tbody>
            <% } %>
        </table>
        <h2 class="pt-5">Tambah Sambutan</h2>
        <form action="/dashboard/createsambutan" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="namaSambutan" class="form-label">Nama</label>
                <input type="text" class="form-control" name="nama">
            </div>
            <div class="mb-3">
                <label for="detailSambutan" class="form-label">Detail Sambutan</label>
                <textarea class="form-control" name="detail" rows="10" id="tiny"></textarea>
            </div>
            <div class="mb-3">
                <label for="fotoSambutan" class="form-label">Foto Sambutan</label>
                <input class="form-control" type="file" name="foto">
            </div>
            <button type="submit" class="btn btn-primary">Tambah</button>
        </form>
    </div>

    <%- include('layouts/footer') %>
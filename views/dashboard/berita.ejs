<%- include('layouts/header-edit') %>

    <h2 class="mt-3">Daftar Berita</h2>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Detail</th>
                    <th scope="col">Ubah</th>
                    <th scope="col">Hapus</th>
                </tr>
            </thead>
            <tbody>
                <% for(row of rows){ %>
                    <tr>
                        <td>
                            <%= row.id_berita %>
                        </td>
                        <td>
                            <%= row.nama_berita %>
                        </td>
                        <td>
                            <%= row.detail_berita %>
                        </td>
                        <td>
                            <a class="nav-link" href="/dashboard/editberita/<%= row.id_berita %>">
                                <span data-feather="edit"></span>
                            </a>
                        </td>
                        <td>
                            <a class="nav-link" href="/dashboard/deleteberita/<%= row.id_berita %>"
                                onclick="return confirm('Yakin?')">
                                <span data-feather="trash"></span>
                            </a>
                        </td>
                    </tr>
            </tbody>
            <% } %>
        </table>
        <h2 class="pt-5">Tambah Berita</h2>
        <form action="/dashboard/createBerita" method="post">
            <div class="mb-3">
                <label for="namaBerita" class="form-label">Nama</label>
                <input type="text" class="form-control" name="nama">
            </div>
            <div class="mb-3">
                <label for="detailBerita" class="form-label">Detail Berita</label>
                <textarea class="form-control" name="detail" rows="10" id="tiny"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Tambah</button>
        </form>
    </div>

    <%- include('layouts/footer') %>
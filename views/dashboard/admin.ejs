<%- include('layouts/header') %>

    <h2 class="mt-3">Daftar Admin</h2>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">User</th>
                    <th scope="col">Ubah</th>
                    <th scope="col">Hapus</th>
                </tr>
            </thead>
            <tbody>
                <% for(row of rows){ %>
                    <tr>
                        <td>
                            <%= row.user_id %>
                        </td>
                        <td>
                            <%= row.user_email %>
                        </td>
                        <td>
                            <a class="nav-link" href="/dashboard/editberita/<%= row.user_id %>">
                                <span data-feather="edit"></span>
                            </a>
                        </td>
                        <td>
                            <a class="nav-link" href="/dashboard/deleteberita/<%= row.user_id %>"
                                onclick="return confirm('Yakin?')">
                                <span data-feather="trash"></span>
                            </a>
                        </td>
                    </tr>
            </tbody>
            <% } %>
        </table>

        <h2 class="pt-5">Tambah Admin</h2>
        <form action="/login/save" method="post" class="col-md-4">
            <div class="mb-3">
                <label for="namaAdmin" class="form-label">Nama :</label>
                <input type="text" class="form-control" name="nama" placeholder="Masukkan Nama" required>
            </div>
            <div class="mb-3">
                <label for="emailAdmin" class="form-label">Email :</label>
                <input type="email" class="form-control" name="email" placeholder="Masukkan Email" required>
            </div>
            <div class="mb-3">
                <label for="passAdmin" class="form-label">Password :</label>
                <input type="password" class="form-control" name="password" placeholder="Masukkan Password" required>
            </div>
            <button type="submit" class="btn btn-primary">Tambah</button>
        </form>

        <%- include('layouts/footer') %>